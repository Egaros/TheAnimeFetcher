<UserControl
    x:Class="TheAnimeFetcher.Controls.AnimeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TheAnimeFetcher.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500"
    d:DesignWidth="400">

    <Grid>
        <Image Source="{x:Bind Anime.anime_image_pathHighRes}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill"/>
        <Grid Background="LightGray" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <TextBlock Text="{x:Bind Anime.anime_title}" FontSize="15" />
        </Grid>
    </Grid>
</UserControl>
